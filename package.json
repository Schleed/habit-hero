{
  "name": "habit-hero",
  "version": "1.0.0",
  "type": "module",
  "description": "Gamified productivity app that rewards habits, tasks, and goals.",
  "author": "Group 5 - CP317",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "test": "jest",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron:start\"",
    "electron:start": "wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dist": "vite build && electron-builder"
  },
  "dependencies": {
    "firebase": "^12.6.0",
    "framer-motion": "^12.23.25",
    "lucide": "^0.555.0",
    "lucide-react": "^0.460.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@tailwindcss/vite": "^4.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@vitejs/plugin-react": "^5.1.1",
    "babel-jest": "^30.2.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^28.2.0",
    "electron-builder": "^26.0.12",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "tailwindcss": "^4.0.0",
    "vite": "^7.2.6",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.yourname.habithero",
    "productName": "Habit Hero",
    "publish": null,
    "directories": {
      "output": "release"
    },
    "asar": true,
    "compression": "maximum",
    "electronLanguages": [
      "en-US"
    ],
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "!node_modules/**/test",
      "!node_modules/**/doc",
      "!node_modules/**/*.map",
      "!**/*.md"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "icon": "icon.icns",
      "hardenedRuntime": false,
      "dmg": {
        "artifactName": "Habit Hero-${version}.dmg"
      }
    }
  }
}
