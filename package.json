{
  "name": "habit-hero",
  "version": "2.0.0",
  "type": "module",
  "description": "Gamified productivity app that rewards habits, tasks, and goals.",
  "author": "Group 5 - CP317",
  "private": true,
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "test": "jest",
    "electron:dev": "concurrently \"npm run dev\" \"npm run electron:start\"",
    "electron:start": "wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dist": "vite build && electron-builder"
  },
  "dependencies": {
    "firebase": "^10.12.0",
    "framer-motion": "^11.0.0",
    "lucide": "^0.378.0",
    "lucide-react": "^0.378.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-react": "^7.24.0",
    "@tailwindcss/vite": "^4.0.0-alpha.14",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^4.0.0-alpha.14",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.yourname.habithero",
    "productName": "Habit Hero",
    "directories": {
      "output": "release"
    },
    "asar": true,
    "compression": "maximum",
    "electronLanguages": [
      "en-US"
    ],
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "!node_modules/**/test",
      "!node_modules/**/doc",
      "!node_modules/**/*.map",
      "!**/*.md"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "mac": {
    "target": [
      "dmg",
      "zip"
    ],
    "category": "public.app-category.productivity",
    "icon": "icon.icns",
    "hardenedRuntime": false
  }, 
  "dmg": {  
    "artifactName": "Habit Hero-${version}.dmg" 
  }
}
}