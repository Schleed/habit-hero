{
  "name": "habit-hero",
  "version": "1.0.0",
  "private": true,

  "main": "electron/main.js",

  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",

    "electron:dev": "concurrently \"npm run dev\" \"npm run electron:start\"",
    "electron:start": "wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",

    "dist": "vite build && electron-builder"
  },

  "dependencies": {
    "firebase": "^12.6.0",
    "framer-motion": "^12.23.25",
    "lucide": "^0.555.0",
    "lucide-react": "^0.460.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },

  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^28.2.0",
    "electron-builder": "^26.0.12",
    "tailwindcss": "^4.0.0",
    "vite": "^7.2.6",
    "wait-on": "^9.0.3"
  },

  "build": {
    "appId": "com.yourname.habithero",
    "productName": "Habit Hero",

    "directories": {
      "output": "release"
    },

    "asar": true,
    "compression": "maximum",

    "electronLanguages": [
      "en-US"
    ],

    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "!node_modules/**/test",
      "!node_modules/**/doc",
      "!node_modules/**/*.map",
      "!**/*.md"
    ],

    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },

    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "icon": "icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },

    "dmg": {
      "artifactName": "Habit Hero-${version}.dmg"
    }
  }
}
